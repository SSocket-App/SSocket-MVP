  { id: "2", title: "SEO malfunctioning", tag: "marketing", icon: "megaphone-outline", ratio: "5/10" },
  { id: "3", title: "Bug", tag: "coding", icon: "bug-outline", ratio: "1/6" },
];

const POSTS = [
  { id: "p1", name: "John Doe", rank: "Level 5", caption: "Just solved a nasty POS reconciliation!" },
  { id: "p2", name: "Jane Smith", rank: "Level 7", caption: "Tip: use logs early and often âš¡" },
  { id: "p3", name: "Peter Obi", rank: "Level 2", caption: "Anyone seen the kitchen inventory bug?" },
  { id: "p4", name: "Ada Lovelace", rank: "Level 10", caption: "Throwback to our hackathon project ðŸš€", image: "https://picsum.photos/400/200?random=1" },
  { id: "p5", name: "Elon Junior", rank: "Level 3", caption: "Prototype sketches look clean!", image: "https://picsum.photos/400/250?random=2" },
  { id: "p6", name: "Ngozi Tech", rank: "Level 8", caption: "Finally launched the beta today ðŸŽ‰" },
];

export default function App() {
  const progress = 45;

  const HelpsHeader = () => (
    <View style={styles.helpsWrap}>
      <Text style={styles.helpsTitle}>Helps</Text>
      <ScrollView horizontal showsHorizontalScrollIndicator={false} contentContainerStyle={styles.helpsScroller}>
        {HELPS.map((h) => (
          <View key={h.id} style={[styles.helpCard, h.newTile && styles.helpNewCard]}>
            <Ionicons name={h.icon} size={18} color={BLACK} style={{ marginBottom: 6 }} />
            <View style={styles.helpAvatar}>
              <View style={styles.helpAvatarHead} />
              <View style={styles.helpAvatarBody} />
            </View>
            <Text style={styles.helpText}>{h.title}</Text>
            {h.tag ? <Text style={styles.helpTag}>#{h.tag}</Text> : null}
            {h.ratio ? <Text style={styles.helpRatio}>{h.ratio}</Text> : null}
          </View>
        ))}
      </ScrollView>
    </View>
  );

  return (
    <SafeAreaView style={styles.container}>
      <StatusBar barStyle="light-content" backgroundColor={BLACK} />

      {/* Sleek Top Bar */}
      <View style={styles.topBar}>
        <View style={styles.profileRankWrap}>
          <View style={styles.avatarLarge}>
            <View style={styles.avatarHead} />
            <View style={styles.avatarBody} />
          </View>
          <View style={styles.rankWrap}>
            <Text style={styles.rankText}>Rank: Level 5</Text>
            <View style={styles.rankBarOuter}>
              <View style={[styles.rankBarInner, { width: `${progress}%` }]}>
                <Text style={styles.rankPercent}>{progress}%</Text>
              </View>
            </View>
          </View>
        </View>
        <Text style={styles.topTitle}>SSocket</Text>
        <View style={styles.topRight}>
          <Ionicons name="chatbubble-outline" size={22} color={WHITE} />
          <View style={{ width: 16 }} />
          <Ionicons name="search-outline" size={22} color={WHITE} />
        </View>
      </View>
      <View style={styles.topAccent} />

      {/* Post Box */}
      <View style={styles.shareRow}>
        <Text style={styles.shareText}>Talk about your ideas</Text>
        <View style={styles.shareIconBox}>
          <Ionicons name="image-outline" size={18} color={BLACK} />
        </View>
      </View>

      {/* Feed */}
      <FlatList
        data={POSTS}
        keyExtractor={(i) => i.id}
        ListHeaderComponent={<HelpsHeader />}
        contentContainerStyle={{ paddingBottom: 100 }}
        renderItem={({ item }) => <PostCard item={item} />}
        showsVerticalScrollIndicator={false}
      />

      {/* Bottom Navigation */}
      <View style={styles.bottomBar}>
        <Ionicons name="home-outline" size={26} color={YELLOW} />
        <Ionicons name="briefcase-outline" size={26} color={YELLOW} />
        <Ionicons name="people-outline" size={26} color={YELLOW} />
        <Ionicons name="notifications-outline" size={26} color={YELLOW} />
        <Ionicons name="person-outline" size={26} color={YELLOW} />
      </View>
    </SafeAreaView>
  );
}

function PostCard({ item }) {
  return (
    <View style={styles.post}>
      <View style={styles.postHeader}>
        <View style={styles.avatarSmall}>
          <View style={styles.avatarSmallHead} />
          <View style={styles.avatarSmallBody} />
        </View>
        <View style={{ flex: 1 }}>
          <Text style={styles.postName}>{item.name}</Text>
          <Text style={styles.postRank}>{item.rank}</Text>
        </View>
      </View>
      <Text style={styles.postCaption}>{item.caption}</Text>
      {item.image && <Image source={{ uri: item.image }} style={styles.postImage} />}
      <View style={styles.actionsRow}>
        <TouchableOpacity style={styles.actionBox}>
          <Ionicons name="thumbs-up-outline" size={20} color={BLACK} />
        </TouchableOpacity>
        <TouchableOpacity style={styles.actionBox}>
          <Ionicons name="chatbubble-outline" size={20} color={BLACK} />
        </TouchableOpacity>
        <TouchableOpacity style={styles.actionBox}>
          <Ionicons name="share-social-outline" size={20} color={BLACK} />
        </TouchableOpacity>
      </View>
    </View>
  );
}

