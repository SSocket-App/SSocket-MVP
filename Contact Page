    backgroundColor: WHITE,
  },
  trackText: { color: BLACK, fontSize: 13, fontWeight: "700" },

  statsBtn: {
    paddingHorizontal: 12,
    paddingVertical: 7,
    borderRadius: 8,
    borderWidth: 2,
    borderColor: BLACK,
    backgroundColor: WHITE,
  },
  statsText: { color: BLACK, fontSize: 14, fontWeight: "800" },

  bottomBar: {
    position: "absolute",
    left: 0,
    right: 0,
    bottom: 0,
    height: 64,
    backgroundColor: BLACK,
    flexDirection: "row",
    alignItems: "center",
    justifyContent: "space-around",
    paddingHorizontal: 12,
  },
});
