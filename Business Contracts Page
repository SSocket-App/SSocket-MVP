// BusinessContractsHub.js — Hub that links to Mini & Mega Contractors (UI only, MVP version)
import React from "react";
import {
  SafeAreaView,
  StatusBar,
  View,
  Text,
  StyleSheet,
  Platform,
  TouchableOpacity,
  ScrollView,
} from "react-native";
import { Ionicons } from "@expo/vector-icons";

/* ===== Brand ===== */
const BLACK = "#000";
const WHITE = "#FFF";
const YELLOW = "#FFD54A";
const MUTED = "#6B7280";

/* Small reusable UI */
function Card({ children }) {
  return <View style={styles.card}>{children}</View>;
}

export default function BusinessContractsHub({ onNavigate }) {
  const go = (screen, params) => {
    if (typeof onNavigate === "function") {
      onNavigate(screen, params);
    } else {
      console.log("NAVIGATE ->", screen, params || {});
    }
  };

  return (
    <SafeAreaView style={styles.container}>
      <StatusBar barStyle="light-content" backgroundColor={BLACK} />

      {/* Top bar */}
      <View style={styles.topBar}>
        <TouchableOpacity style={styles.iconBox} activeOpacity={0.8}>
          <Ionicons name="chevron-back" size={24} color={WHITE} />
        </TouchableOpacity>
        <Text style={styles.topTitle}>Business Contracts</Text>
        <View style={styles.iconBox} />
      </View>
      <View style={styles.topAccent} />

      <ScrollView contentContainerStyle={{ paddingBottom: 24 }}>
        {/* Mini Contractors */}
        <Card>
          <View style={styles.rowHeader}>
            <Text style={styles.cardTitle}>Mini Contractors</Text>
            <View style={styles.badge}>
              <Ionicons name="flash-outline" size={14} color={BLACK} />
              <Text style={styles.badgeTxt}>Quick Tasks</Text>
            </View>
          </View>

          <Text style={styles.cardSub}>
            Lightweight, short-term engagements. Perfect for small deliverables,
            trials, or ongoing micro-tasks.
          </Text>

          <View style={styles.actionsRow}>
            <TouchableOpacity
              style={styles.viewBtn}
              activeOpacity={0.9}
              onPress={() => go("MiniContractors")}
            >
              <Ionicons name="briefcase-outline" size={16} color={BLACK} />
              <Text style={styles.viewBtnTxt}>Open Mini Contractors</Text>
              <Ionicons name="chevron-forward" size={16} color={BLACK} />
            </TouchableOpacity>
          </View>
        </Card>

        {/* Mega Contractors */}
        <Card>
          <View style={styles.rowHeader}>
            <Text style={styles.cardTitle}>Mega Contractors</Text>
            <View style={[styles.badge, { backgroundColor: "#FFF3B0" }]}>
              <Ionicons name="trophy-outline" size={14} color={BLACK} />
              <Text style={styles.badgeTxt}>Transfer Style</Text>
            </View>
          </View>

          <Text style={styles.cardSub}>
            High-stakes roles with milestones and visibility controls. Use for
            senior or long-term contracts.
          </Text>

          <View style={styles.actionsRow}>
            <TouchableOpacity
              style={styles.viewBtn}
              activeOpacity={0.9}
              onPress={() => go("MegaContractors")}
            >
              <Ionicons name="medal-outline" size={16} color={BLACK} />
              <Text style={styles.viewBtnTxt}>Open Mega Contractors</Text>
              <Ionicons name="chevron-forward" size={16} color={BLACK} />
            </TouchableOpacity>
          </View>
        </Card>

        {/* Mini Contractees (NEW) */}
        <Card>
          <View style={styles.rowHeader}>
            <Text style={styles.cardTitle}>Mini Contractees</Text>
            <View style={[styles.badge, { backgroundColor: "#E0E7FF" }]}>
              <Text style={styles.badgeSymbol}>≅</Text>
              <Text style={styles.badgeTxt}>B2B Contracts</Text>
            </View>
          </View>

          <Text style={styles.cardSub}>
            Contracts from other businesses is possible here if need be
          </Text>

          <View style={styles.actionsRow}>
            <TouchableOpacity
              style={styles.viewBtn}
              activeOpacity={0.9}
              onPress={() => go("MiniContractees")}
            >
              <Ionicons name="people-outline" size={16} color={BLACK} />
              <Text style={styles.viewBtnTxt}>Open Mini Contractees</Text>
              <Ionicons name="chevron-forward" size={16} color={BLACK} />
            </TouchableOpacity>
          </View>
        </Card>
      </ScrollView>
    </SafeAreaView>
  );
}

/* ===== Styles ===== */
const styles = StyleSheet.create({
  container: { flex: 1, backgroundColor: WHITE },

  /* Top bar */
  topBar: {
    backgroundColor: BLACK,
    height: 88,
    paddingTop: Platform.OS === "android" ? (StatusBar.currentHeight || 0) : 12,
    paddingHorizontal: 12,
    paddingBottom: 12,
    flexDirection: "row",
    alignItems: "flex-end",
    justifyContent: "space-between",
  },
  iconBox: { width: 40, height: 36, justifyContent: "center" },
  topTitle: { color: WHITE, fontSize: 22, fontWeight: "900" },
  topAccent: { height: 3, backgroundColor: YELLOW },

  /* Cards */
  card: {
    marginHorizontal: 12,
    marginTop: 12,
    padding: 14,
    borderRadius: 12,
    borderWidth: 2,
    borderColor: BLACK,
    backgroundColor: WHITE,
  },
  cardTitle: { fontSize: 16, fontWeight: "900", color: BLACK },
  cardSub: { marginTop: 6, color: MUTED, fontSize: 12, lineHeight: 18 },

  rowHeader: {
    flexDirection: "row",
    alignItems: "center",
    justifyContent: "space-between",
  },

  badge: {
    flexDirection: "row",
    alignItems: "center",
    backgroundColor: "#C7F9CC",
    paddingHorizontal: 8,
    paddingVertical: 6,
    borderRadius: 999,
  },
  badgeTxt: { marginLeft: 6, fontSize: 10, fontWeight: "900", color: BLACK },
  badgeSymbol: { fontSize: 12, fontWeight: "900", color: BLACK },

  actionsRow: { flexDirection: "row", alignItems: "center", marginTop: 10 },

  viewBtn: {
    flexDirection: "row",
    alignItems: "center",
    gap: 8,
    alignSelf: "flex-start",
    borderWidth: 2,
    borderColor: BLACK,
    borderRadius: 12,
    paddingVertical: 8,
    paddingHorizontal: 12,
    backgroundColor: YELLOW,
  },
  viewBtnTxt: { fontWeight: "900", color: BLACK, fontSize: 14 },
});
