    gap: 8,
    borderWidth: 2,
    borderColor: BLACK,
    backgroundColor: YELLOW,
    borderRadius: 12,
    paddingHorizontal: 14,
    paddingVertical: 10,
  },
  finalizeTxt: { fontWeight: "900", color: BLACK, fontSize: 14 },
});
