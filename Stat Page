              <Text style={styles.kpiLabel}>Helps completed</Text>
              <Text style={styles.kpiValue}>{interval.helps}</Text>
              <Text style={styles.kpiHint}>Total solved requests in this window</Text>
            </View>
            <View style={styles.kpi}>
              <Text style={styles.kpiLabel}>Avg ★ per help</Text>
              <Text style={styles.kpiValue}>{interval.avgPerHelp.toFixed(2)}</Text>
              <Text style={styles.kpiHint}>Quality per answer, simple and clear</Text>
            </View>
            <View style={styles.kpi}>
              <Text style={styles.kpiLabel}>On-duty days</Text>
              <Text style={styles.kpiValue}>
                {interval.activeDays}/{interval.totalDays}
              </Text>
              <Text style={styles.kpiHint}>Days you showed up and helped</Text>
            </View>
          </View>

          <View style={{ marginTop: 10 }}>
            <Text style={[styles.sectionHint, { marginBottom: 4 }]}>Common problem types you help with</Text>
            {catEntries.map(([k, v]) => (
              <HBar key={k} label={`• ${k}`} pct={Math.round((v / catTotal) * 100)} big />
            ))}
          </View>
        </Card>
      </ScrollView>
    </SafeAreaView>
  );
}

