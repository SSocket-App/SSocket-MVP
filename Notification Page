// App.js
import React from "react";
import {
  SafeAreaView,
  StatusBar,
  View,
  Text,
  FlatList,
  StyleSheet,
  Platform,
} from "react-native";
import { Ionicons } from "@expo/vector-icons";

const YELLOW = "#FFD54A";
const BLACK = "#000";
const WHITE = "#FFF";

const DATA = [
  "John liked your video",
  "Jane mentioned you in a comment",
  "Peter started following you",
  "Lucy commented on your post",
  "Ted liked your comment",
  "Rick mentioned you in their comment",
  "Alice started following you",
  "Rachel liked your video",
  "Samuel replied to your story",
  "Grace reacted to your update",
];

export default function App() {
  return (
    <SafeAreaView style={styles.container}>
      <StatusBar barStyle="light-content" backgroundColor={BLACK} />

      {/* Taller Top Bar */}
      <View style={styles.topBar}>
        <Text style={styles.topBarTitle}>Notifications</Text>
      </View>
      <View style={styles.topAccent} />

      <FlatList
        contentContainerStyle={styles.listContent}
        data={DATA}
        keyExtractor={(item, idx) => String(idx)}
        renderItem={({ item }) => <Row text={item} />}
      />

      {/* Bottom nav copied from screenshot */}
      <View style={styles.bottomBar}>
        <Ionicons name="home-outline" size={28} color={YELLOW} />
        <Ionicons name="briefcase-outline" size={28} color={YELLOW} />
        <Ionicons name="people-outline" size={28} color={YELLOW} />
        <Ionicons name="notifications-outline" size={28} color={YELLOW} />
        <Ionicons name="person-outline" size={28} color={YELLOW} />
      </View>
    </SafeAreaView>
  );
}

function Row({ text }) {
  return (
    <View style={styles.row}>
      <View style={styles.avatar}>
        <View style={styles.dotHead} />
        <View style={styles.dotBody} />
      </View>
      {/* Bigger & Bolder text */}
      <Text numberOfLines={2} style={styles.rowText}>{text}</Text>
      <View style={styles.unreadDot} />
    </View>
  );
}

/* -------------------- Styles -------------------- */
const styles = StyleSheet.create({
  container: { flex: 1, backgroundColor: WHITE },

  // Taller header now
  topBar: {
    backgroundColor: BLACK,
    height: 88, // increased from 68
    paddingTop: Platform.OS === "android" ? (StatusBar.currentHeight || 0) : 12,
    alignItems: "center",
    justifyContent: "flex-end",
    paddingBottom: 14,
  },
  topBarTitle: { color: WHITE, fontSize: 26, fontWeight: "900" }, // bigger & bolder
  topAccent: { height: 3, backgroundColor: YELLOW },

  listContent: { paddingVertical: 10, paddingBottom: 86 },

  row: {
    flexDirection: "row",
    alignItems: "center",
    paddingHorizontal: 16,
    paddingVertical: 14,
    borderBottomWidth: 1,
    borderBottomColor: "#EFEFEF",
    gap: 12,
  },
  avatar: {
    width: 44,
    height: 44,
    borderRadius: 22,
    borderColor: BLACK,
    borderWidth: 2,
    alignItems: "center",
    justifyContent: "center",
    backgroundColor: WHITE,
  },
  dotHead: {
    width: 12,
    height: 12,
    borderRadius: 6,
    borderColor: BLACK,
    borderWidth: 2,
    backgroundColor: WHITE,
    marginBottom: 1,
  },
  dotBody: {
    width: 20,
    height: 10,
    borderRadius: 6,
    borderColor: BLACK,
    borderWidth: 2,
    backgroundColor: WHITE,
  },
  // Notification text now bolder and larger
  rowText: { flex: 1, color: BLACK, fontSize: 18, fontWeight: "700" },
  unreadDot: { width: 8, height: 8, borderRadius: 4, backgroundColor: YELLOW },

  bottomBar: {
    position: "absolute",
    left: 0,
    right: 0,
    bottom: 0,
    height: 64,
    backgroundColor: BLACK,
    flexDirection: "row",
    alignItems: "center",
    justifyContent: "space-around",
    paddingHorizontal: 12,
  },
});
